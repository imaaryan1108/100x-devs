  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://neondb_owner:eTjXUG4r9yRQ@ep-royal-poetry-a5u7at6m.us-east-2.aws.neon.tech/neondb?sslmode=require"
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  name     String?
  passrord String
  posts    Post[]
}

model Post {
  id        String  @id @default(cuid())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  String
}
